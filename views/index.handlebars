<h1>Skate Park</h1>
<div class="py-4">
    <h2>Lista de participantes</h2>

    {{#if usuarios}}
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Foto</th>
                <th scope="col">Nombre</th>
                <th scope="col">Años de experiencia</th>
                <th scope="col">Especialidad</th>
                <th scope="col">Estado</th>
            </tr>
        </thead>
        <tbody>
            {{#each usuarios}}
            <tr>
                <th scope="row">{{@index}}</th>
                <td>
                    <div style="background-image: url('/img/{{this.foto}}');"></div>
                </td>
                <td>{{this.nombre}}</td>
                <td>{{this.anos_experiencia}}</td>
                <td>{{this.especialidad}}</td>
                {{#if this.estado}}
                <td class="text-success font-weight-bold">Aprobado</td>
                {{else}}
                <td class="text-warning font-weight-bold">En revisión</td>
                {{/if}}
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <h3 class="mt-3 mb-5">Aún no hay participantes, utiliza el botón de abajo para registrarte</h3>
    {{/if}}

    <a href="/editar" class="btn btn-dark d-none" role="button" id="editar">Editar datos</a>
    <a href="/" class="btn btn-dark d-none" role="button" id="logout"
        onclick="sessionStorage.removeItem('Token')">Logout</a>
    <a href="/login" class="btn btn-dark" role="button" id="login">Iniciar Sesión</a>
    <a href="/registro" class="btn btn-dark" role="button" id="registrar">Registrarme</a>
</div>

<script>
    const token = sessionStorage.getItem('Token')
    if (token) {
        $('#editar').removeClass('d-none')
        $('#logout').removeClass('d-none')
        $('#editar').attr("href", `/editar?token=${token}`)
        $('#login').addClass('d-none')
        $('#registrar').addClass('d-none')
    }


</script>